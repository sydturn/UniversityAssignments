<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sydney.myapplication.MainActivity">

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ClearButton"
        android:layout_alignBaseline="@+id/CalcButton"
        android:layout_alignBottom="@+id/CalcButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp" />

    <TextView
        android:text="Enter Your Marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/MainPrompt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Final Grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ExamPercent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/finalGrade" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|number"
        android:ems="10"
        android:layout_marginTop="46dp"
        android:id="@+id/assignmentPercent"
        android:layout_below="@+id/MainPrompt"
        android:layout_toRightOf="@+id/assignmentPrompt"
        android:layout_toEndOf="@+id/assignmentPrompt" />

    <TextView
        android:text="Exams(%)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/examPrompt"
        android:layout_alignBaseline="@+id/ExamPercent"
        android:layout_alignBottom="@+id/ExamPercent"
        android:layout_toLeftOf="@+id/ExamPercent"
        android:layout_toStartOf="@+id/ExamPercent" />

    <TextView
        android:text="Assignments(%)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assignmentPrompt"
        android:layout_alignBaseline="@+id/assignmentPercent"
        android:layout_alignBottom="@+id/assignmentPercent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/ExamPercent"
        android:layout_below="@+id/assignmentPercent"
        android:layout_alignLeft="@+id/assignmentPercent"
        android:layout_alignStart="@+id/assignmentPercent" />

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CalcButton"
        android:layout_below="@+id/finalGrade"
        android:layout_alignLeft="@+id/examPrompt"
        android:layout_alignStart="@+id/examPrompt"
        android:layout_marginTop="70dp" />

</RelativeLayout>
